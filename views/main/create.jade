block headContent
    style.

        #mainContent{
            height:100%;
            width:1000px;
            margin-left:-500px;
            position:absolute;
            top:0px;
            left:50%;
        }
            #centerContainer{
                position:absolute;
                top:50%;
                margin-top:-250px;
                width:800px;
                margin-left:100px;
            }
                #mainTitle{
                    font-size:50px;
                    font-family:Raleway;
                    font-weight:100;
                    text-align:center;
                }
                #courseInput{
                    width:600px;
                    position:relative;
                    margin-left:-300px;
                    left:50%;

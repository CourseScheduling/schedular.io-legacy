extends ../MainTemplate
block headContent
	link(rel="stylesheet" href="/css/manage.main.css")
	title Manager
block bodyContent

	div(id="m-large-name") My Schedules
		//div(style="padding:10px;float:right;font-size:12px;border-radius:3px;background-color:#2c3e50;color:#FFF;cursor:pointer;") Import From myUFV
	div(id="box-container" style="width:810px;")
	div#main-loadingGear(style="height:100px;width:100px;background:url(/images/gears.gif) center center no-repeat;background-size:100px 100px;z-index:100000;position:absolute;top:50%;margin-top:-50px;left:50%;margin-left:-50px;padding:40px;")
		p(style="position:absolute;bottom:0px;left:0px;font-family:Open Sans;font-size:12px;font-weight:100;text-align:center;width:100%;") Gimme a sec...


	//script(src="/js/manage.main.js")
	style.
		.mg-Btn{
			cursor:pointer;
			height:20px;
			width:20px;
			border-radius:3px;
			margin-left:5px;
			margin-right:5px;
			display:inline-block;
			background-size:80%;
			background-position:center center;
			background-repeat:no-repeat;
		}
		.bookIcon{background-image:url(/images/book.png);	}
		.killIcon{background-image:url(/images/x.png);}
		.numberIcon{background-image:url(/images/hash.png);}
		
		.bookIcon:hover{background-color:#2ecc71;}
		.killIcon:hover{background-color:#1abc9c;}
		.numberIcon:hover{background-color:#3498db;}
		
	div.material(class="box-container" id="boxPossibleTemplate")
		canvas(style="box-sizing:border-box;" height="200px" width="200px" class="box-image")
		div(class="box-infoContainer" style="border-bottom:0;")
			div(class="box-infoTitle" contenteditable="true" onblur="regexEdit(this)") A Schedule
			div(class="box-createTime") Thursday, Jan 12
			div(style="text-align:center;width:100%;float:left;")
				div.mg-Btn.material.bookIcon(data-gTTLbl="Find Books")
				div.mg-Btn.material.numberIcon(data-gTTLbl="Show Class Codes")
				div.mg-Btn.material.killIcon(data-gTTLbl="Delete")
			
	script.
		function regexEdit(e){
			e.innerHTML	=	e.innerHTML.replace(/[^A-Za-z0-9\s]/g,'').substr(0,50)||'schedule';	
		}
	script(src="/js/manage/CORE.js")
	script(src="/js/manage/fetch.js")
	script(src="/js/manage/view.js")
	script(src="/js/manage/main.js")